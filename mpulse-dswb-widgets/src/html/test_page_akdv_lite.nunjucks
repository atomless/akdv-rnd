<html>
    <head>
        <style>
          .section1 {
            width: 100%;
            height: 50%;
            display: flex;
          }

          .section2 {
            width: 100%;
            height: 50%;
            display: flex;
          }

          .akdv-chart {
            width: 100%;
            height: auto;
            display: block;
            position: relative;
          }
        </style>

        <script>
        window.akdv_lite_host = location.host;
        window.akdv_manifest = {
            charts: [{
                    container_id: '#akdv-chart1',
                    namespace: 'FILE_TEST',
                    chart: {
                        type: 'donut'
                    },
                    datasource: {
                        type: 'FILE',
                        uri: `../data/donut.json`
                    }
                },
                {
                    container_id: '#akdv-chart2',
                    namespace: 'DSWB_TEST',
                    chart: {
                        type: 'donut'
                    },
                    datasource: {
                        type: 'DSWB',
                        tenant: '253001',
                        api_token: '6ca0b886-d537-42d7-a64a-2c2979e63868',
                        host: 'dswb-dev-mpulse-staging.soasta.com',
                        notebookuuid: '8bcd8e56-d8f8-418b-a37f-69bddeac685c',
                        background: false,
                        query: {
                            filters: {
                                criteria: [
                                    {
                                        attribute:"mPulse Domain",
                                        value: "20401"
                                    }
                                ]
                            }
                        }
                    }
                },
                {
                    container_id: '#akdv-chart3',
                    namespace: 'GQL_TEST',
                    chart: {
                        type: 'donut'
                    },
                    datasource: {
                        type: 'GRAPHQL',
                        uri: 'https://api.soti.akamai.com', // (optional) default if not defined 'https://api.soti.akamai.com'
                        result_path: 'data.mPulseFacts', // (optional) default if not defined 'data.mPulseFacts' (or root response data if not found)
                        query: `{
                            mPulseFacts(filter: {
                            timestamp: {greaterThan: 1544628531000}}}, 
                            groupBy: [devicetypename]) {
                                edges {
                                    node {
                                        devicetypename
                                        firstbytetimer @median
                                        domloadtimer @median
                                        firstcontentfulpaint @median
                                        firstinputdelay @median
                                        firstpaint @median
                                        pageloadtime @median
                                        ttfi @median
                                        tti @median
                                        ttvr @median
                                    }
                                }
                            }
                        }`
                    }
                }
            ]
        }
        </script>
        <script src="../javascript/lib/akdv-lite-core.js"></script>
    <head>

    <body>
      <section id="section1" class="section1">
        <div id="akdv-chart1" data-datasource-FILE="true"></div>
        <div id="akdv-chart2" data-datasource-DSWB="true"></div>
        <div id="akdv-chart3" data-datasource-GQL="true"></div>
      </section>
    </body>
</html>